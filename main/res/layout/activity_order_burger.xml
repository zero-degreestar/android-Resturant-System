<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OrderBurger">
    <ImageView
        android:id="@+id/img_burger"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/img_1"
        />
    <TextView
        android:id="@+id/Customer_burger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/img_burger"
        app:layout_constraintTop_toBottomOf="@id/img_burger"
        android:text="Customize your order ($0.36each)"
        android:layout_marginHorizontal="20dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        />
    <ScrollView
        android:id="@+id/ScrollView_burger"
        app:layout_constraintTop_toBottomOf="@id/Customer_burger"
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/cb_BBQ_Sauce"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BBQ Sauce"
                android:textStyle="bold"
                android:textSize="25sp"
                />
            <CheckBox
                android:id="@+id/cb_Bacon"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bacon"
                android:textStyle="bold"
                android:textSize="25sp"
                />
            <CheckBox
                android:id="@+id/cb_Beetroot"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beetroot"
                android:textStyle="bold"
                android:textSize="25sp"
                />
            <CheckBox
                android:id="@+id/cb_Cheese"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cheese"
                android:textStyle="bold"
                android:textSize="25sp"
                />
            <CheckBox
                android:id="@+id/cb_Egg"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Egg"
                android:textStyle="bold"
                android:textSize="25sp"
                />
            <CheckBox
                android:id="@+id/cb_Lettuce"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lettuce"
                android:textStyle="bold"
                android:textSize="25sp"
                />
            <CheckBox
                android:id="@+id/cb_Mayo"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mayo"
                android:textStyle="bold"
                android:textSize="25sp"
                />
            <CheckBox
                android:id="@+id/cb_Onion"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Onion"
                android:textStyle="bold"
                android:textSize="25sp"
                />
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/Next_burger_orber_button"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/ScrollView_burger"
        app:layout_constraintTop_toBottomOf="@id/ScrollView_burger"
        android:layout_marginHorizontal="35dp"
        android:text="Next"
        android:onClick="Next_burger_onclick"
        />



</androidx.constraintlayout.widget.ConstraintLayout>