<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OrderIcecream">
    <ImageView
        android:id="@+id/img_ice_cream"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/img_3"
        />
    <TextView
        android:id="@+id/Customer_ice_cream"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/img_ice_cream"
        app:layout_constraintTop_toBottomOf="@id/img_ice_cream"
        android:text="Customize your order ($0.35each)"
        android:layout_marginHorizontal="20dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        />
    <ScrollView
        android:id="@+id/ScrollView_icecream"
        app:layout_constraintTop_toBottomOf="@id/Customer_ice_cream"
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/cb_Banana"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Banana"
                android:textStyle="bold"
                android:textSize="25sp"
                />
            <CheckBox
                android:id="@+id/cb_Caramel_Sauce"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Caramel Sauce"
                android:textStyle="bold"
                android:textSize="25sp"
                />
            <CheckBox
                android:id="@+id/cb_Chocolate_Topping"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chocolate Topping"
                android:textStyle="bold"
                android:textSize="25sp"
                />
            <CheckBox
                android:id="@+id/cb_Chopped_Nuts"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chopped Nuts"
                android:textStyle="bold"
                android:textSize="25sp"
                />
            <CheckBox
                android:id="@+id/cb_Maple_Syrup"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Maple Syrup"
                android:textStyle="bold"
                android:textSize="25sp"
                />
            <CheckBox
                android:id="@+id/cb_Sherbet"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sherbet"
                android:textStyle="bold"
                android:textSize="25sp"
                />
            <CheckBox
                android:id="@+id/cb_Sprinkles"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sprinkles"
                android:textStyle="bold"
                android:textSize="25sp"
                />
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/Next_icecream_orber_button"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/ScrollView_icecream"
        app:layout_constraintTop_toBottomOf="@id/ScrollView_icecream"
        android:layout_marginHorizontal="35dp"
        android:text="Next"
        android:onClick="Next_icecream_onclick"
        />


</androidx.constraintlayout.widget.ConstraintLayout>